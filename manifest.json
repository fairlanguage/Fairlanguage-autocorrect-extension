{
  "name": "Fairlanguage Prototype",
  "version": "0.4.1",
  "manifest_version":2,
  "description": "Fairlanguage ist dein Autokorrektur Tool, das dir hilft, eine faire, gendergerechte Sprache zu verwenden.",

  "icons" : { "16": "images/fairlanguage_logo_16_white_color.png",
              "48" : "images/fairlanguage_logo_48_transparent.png",
              "128" : "images/fairlanguage_logo_128_transparent.png" },



  "page_action": {
    "default_icon"  : "images/fairlanguage_logo_16_white_color.png",
    "default_title" : "Fairlanguage - Faire Sprache auf Knopfdruck",
    "popup" : "action/disable.html"
  },

  "options_page": "options/options.html",
  "background" : {
    "scripts": [
      "background.js"
    ]
  },
  "content_security_policy": "script-src 'unsafe-eval'; object-src 'unsafe-eval'",

  "permissions": [
     "tabs",
     "storage",
     "https://fairlanguage.dev-star.de/*",
     "https://de.fairlanguage.dev-star.de/*",
     "https://en.fairlanguage.dev-star.de/*"
   ],


  "content_scripts": [
  {
      "matches": ["http://*/*", "https://*/*"],

      "js": ["scripts/jquery-1.8.3.js",
             "scripts/atd.core.js",
             "scripts/jquery.atd.js",
             "scripts/jquery.atd.proofreader.js",
             "scripts/jquery.atd.div.js",
             "scripts/jquery.atd.iframe.js",
             "scripts/widget.js",
             "scripts/autoproof.js",
             "scripts/atd-chrome.js"],

     "all_frames": true,
     "run_at": "document_end"
  }],
  "web_accessible_resources" : [
    "css/atd.css",
    "images/*.png"
  ]
}
